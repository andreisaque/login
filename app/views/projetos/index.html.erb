<p id="notice"><%= notice %></p>

<style>

table {

    border-collapse: collapse;

    width: 100%;

    font-size:16px;

}



th, td {

    text-align: center;

    padding: 8px;

    font-size: 16px;

}



tr:nth-child(even){background-color: #f2f2f2}



th {

    background-color: #4CAF50;

    color: white;

}

</style>





<table>

  <thead>

    <tr>

      <th>Nome</th>

      <th>Matricula</th>

      <th>Endereco</th>

      <th>Telefone</th>

      <th colspan="3"></th>

    </tr>

  </thead>



  <tbody>

    <% @projetos.each do |projeto| %>

      <tr>

        <td><%= projeto.nome %></td>

        <td><%= projeto.matricula %></td>

        <td><%= projeto.endereco %></td>

        <td><%= projeto.telefone %></td>

        <td><%= link_to 'Mostrar', projeto %></td>

        <td><%= link_to 'Editar', edit_projeto_path(projeto) %></td>

        <td><%= link_to 'Deletar', projeto, method: :delete, data: { confirm: 'Certeza?' } %></td>

      </tr>

    <% end %>

  </tbody>

</table>



<br>



<h2><%= link_to 'Cadastrar Novo', new_projeto_path %></h2>